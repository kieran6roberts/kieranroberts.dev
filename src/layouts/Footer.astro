---
import { SocialLinks } from "@components/navigation/SocialLinkFloatingBar";
import { MainNavLinks } from "@components/navigation/MainNavLinks";

const { asDark } = Astro.props;
---

<footer
  class={`relative flex flex-row justify-between items-center gap-y-4 px-56 py-8 h-56 ${asDark ? "bg-[#100114]" : ""} border-t border-slate-900`}
>
  <div class="flex flex-col gap-4">
    <a
      href="/"
      class={`text-3xl font-medium ${asDark ? "text-white" : "text-black dark:text-white"}`}
    >
      kieranroberts.dev
    </a>
    <div class="flex flex-row items-center">
      <SocialLinks />
    </div>
    <div
      class={`${asDark ? "text-white" : "text-black dark:text-white"} text-sm`}
    >
      Design & functionality by me. &#169;2024 Kieran Roberts
    </div>
  </div>
  <div class="flex flex-col gap-4 self-end pb-4">
    <div
      class="flex items-center font-light gap-4 bg-[#100114] py-2 px-6 rounded-xl"
    >
      <MainNavLinks client:visible />
    </div>
  </div>
</footer>
