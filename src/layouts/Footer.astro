---
import { SocialLinks } from "@components/navigation/SocialLinkFloatingBar";
import { MainNavLinks } from "@components/navigation/MainNavLinks";
// import GithubStats from "@components/GithubStats.astro";

const { asDark } = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class={`main-footer relative border-t dark:border-slate-900`}>
  <div
    class="flex flex-col md:flex-row justify-between gap-y-4 px-4 md:px-8 xl:px-12 py-8 xl:py-16 items-center max-w-[1600px] mx-auto"
  >
    <div class="flex flex-col gap-4 items-center md:items-start">
      <a
        href="/"
        class={`text-3xl font-medium ${asDark ? "text-white" : "text-black dark:text-white"}`}
      >
        kieranroberts.dev
      </a>
      <div class="flex flex-row items-center">
        <SocialLinks client:visible />
      </div>
      <div
        class={`text-center md:text-start ${asDark ? "text-white" : "text-black dark:text-white"} text-sm`}
      >
        Design & build by Kieran Roberts &#169;{currentYear}
      </div>
    </div>
    <div class="flex flex-col gap-4 self-center md:self-end">
      <!-- <div class="hidden md:block text-black dark:text-white self-end">
        <GithubStats client:load />
      </div> -->
      <!-- <div
        class="flex items-center justify-center md:justify-start border bg-[#100114] font-light px-6 gap-4 py-2 rounded-xl"
      >
        <MainNavLinks asDark client:visible />
      </div> -->
    </div>
  </div>
</footer>
