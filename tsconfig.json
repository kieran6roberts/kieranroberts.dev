{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@styles/*": ["src/styles/*"],
      "@stores/*": ["src/stores/*"],
      "@modules/*": ["src/modules/*"],
      "@consts/*": ["src/consts/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*", "./*.ts"],
  "exclude": ["node_modules", "tsconfig.json", "generated"]
}
