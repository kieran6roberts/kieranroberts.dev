---
import SocialLink from '@shared/components/SocialLink.astro';
import { LINKEDIN_PROFILE_URL, GITHUB_PROFILE_URL, BLUESKY_PROFILE_URL } from '@config/consts/urls';

const BLOG_PATH = '/blog';
const isBlogActive = Astro.url.pathname.startsWith(BLOG_PATH);
---

<div class="flex items-center gap-x-2 text-sm md:gap-x-6">
	<SocialLink
		href={BLOG_PATH}
		preventTransition={true}
		target="_self"
		label="Blog"
		iconName="book"
		isActive={isBlogActive}
	/>
	<span class="hidden text-zinc-400 md:block dark:text-zinc-500">|</span>
	<SocialLink href={LINKEDIN_PROFILE_URL} label="LinkedIn" iconName="linked-in" />
	<span class="hidden text-zinc-400 md:block dark:text-zinc-500">|</span>
	<SocialLink href={GITHUB_PROFILE_URL} label="GitHub" iconName="github" />
	<span class="hidden text-zinc-400 md:block dark:text-zinc-500">|</span>
	<SocialLink href={BLUESKY_PROFILE_URL} label="Bluesky" iconName="bluesky" />
</div>
