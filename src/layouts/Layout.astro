---
import type { ComponentProps } from "astro/types";
import SEO from "@components/SEO.astro";
import { Header } from "@layouts/Header";
import Footer from "@layouts/Footer.astro";
import { fetchPaginatedBlogPosts, getPostsPaginatedData } from "@utils/blog";

type Props = ComponentProps<typeof SEO> & {
  showFooter?: boolean;
};

const DEFAULT_TITLE = "Kieran Roberts | Software Developer";
const DEFAULT_DESCRIPTION =
  "Hi, I'm a React & TypeScript focused web developer with multiple years worth of industry experience. Let's talk";
const DEFAULT_URL = "kieranroberts.dev";

const {
  title = DEFAULT_TITLE,
  description = DEFAULT_DESCRIPTION,
  url = DEFAULT_URL,
  showFooter = true,
} = Astro.props;

const pathname = new URL(Astro.request.url).pathname;

const postsData = await fetchPaginatedBlogPosts({ first: 2 });
const { postsArray } = getPostsPaginatedData(postsData as any);
---

<html
  style={{
    scrollBehavior: "smooth",
  }}
  lang="en"
>
  <SEO title={title} description={description} url={url} />
  <body
    style={{
      scrollBehavior: "smooth",
    }}
    class="bg-[#faf8f7] dark:bg-[#100114] dark:text-white"
  >
    <div class="flex flex-col justify-start min-h-[100vh]">
      <Header client:load pathname={pathname} blogPosts={postsArray} />
      <slot />
    </div>
    {showFooter ? <Footer /> : null}
  </body>
</html>
