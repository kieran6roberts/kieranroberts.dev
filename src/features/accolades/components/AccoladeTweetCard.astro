---
import { Tweet } from '@astro-community/astro-embed-twitter';
import { Icon } from 'astro-icon/components';

interface Props {
	id: string;
	className?: string;
}

const { id, className } = Astro.props;
---

<div
	class={`relative bg-zinc-50 dark:bg-zinc-900 col-span-1 border border-zinc-200 dark:border-zinc-800 rounded-lg flex items-start justify-center ${className}`}
>
	<Tweet {id} />
	<div class="absolute bottom-4 right-4 text-zinc-500">
		<Icon name="x" width="24" height="24" />
	</div>
</div>
