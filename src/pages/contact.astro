---
import Layout from "../layouts/Layout.astro";
import { ContactForm } from "../components/forms/ContactForm";
---

<Layout
  title="Contact me | Kieran Roberts"
  description="Want to work with me, great! Get in touch with me using the contact form here."
  url="kieranroberts.dev/contact"
  showFooter={false}
>
  <main class="px-4 md:px-16 py-16 w-full flex flex-col">
    <h1
      class="font-header text-l-secondary dark:text-d-tertiary-2 text-4xl text-center font-semibold mb-8"
    >
      Get in touch with me
    </h1>
    <section class="flex flex-col gap-y-8 justify-center max-w-[650px] mx-auto">
      <p class="text-center">
        Want to ask me a question, collaborate with me, or get in touch for any
        other reason. Share it below and I'll get back within the same day
      </p>
      <ContactForm client:load />
    </section>
  </main>
</Layout>
