---
import type { HTMLTag, Polymorphic } from 'astro/types';
import { cva, cx } from 'class-variance-authority';

const actionItem = cva(
	'cursor-pointer focus-visible:outline-3 outline-accent-darkest dark:outline-accent-brightest outline-offset-2 dark:outline-offset-zinc-900',
);

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & { title?: string };

const { as: Tag = 'button', class: className = '', ...restOfProps } = Astro.props;
---

<Tag class={cx(actionItem(), className)} {...restOfProps}>
	<slot />
</Tag>
