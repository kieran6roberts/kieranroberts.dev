---
import { Image } from 'astro:assets';
import ActionItem from '@shared/components/base/ActionItem.astro';

type Props = {
	href: string;
	src: any;
	alt: string;
};

const { href, src, alt } = Astro.props;
---

<div
	class="relative flex h-10 w-10 flex-shrink-0 items-center justify-center overflow-hidden rounded-full border border-zinc-200 bg-white p-[2px] hover:border-zinc-300 dark:border-zinc-700 dark:bg-zinc-900 dark:hover:border-zinc-600"
>
	<ActionItem
		as="a"
		{href}
		class="border-accent-dark dark:border-accent-brightest rounded-full border"
	>
		<Image {src} {alt} width={80} height={80} loading="eager" quality={100} class="rounded-full" />
	</ActionItem>
</div>
