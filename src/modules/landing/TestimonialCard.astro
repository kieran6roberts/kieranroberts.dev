---
interface Testimonial {
  name: string;
  jobTitle: string;
  copy: string;
}

interface Props {
  testimonial: Testimonial;
  isMiddle?: boolean;
}

const { testimonial, isMiddle } = Astro.props;
---

<div
  class:list={[
    "group flex flex-col gap-4 bg-l dark:bg-d p-4 rounded-lg shadow border border-zinc-200 dark:border-zinc-800 hover:bg-zinc-100 dark:hover:bg-zinc-900 transition-colors duration-200",
    { "col-span-2": isMiddle },
  ]}
>
  <div class="flex items-center gap-4">
    <div
      class="relative flex items-center bg-l dark:bg-d justify-center h-10 w-10 rounded-full"
    >
      <img
        src="/Kieran-Avatar.webp"
        alt={`${testimonial.name} avatar`}
        width={40}
        height={40}
        loading="lazy"
        class="rounded-full"
      />
    </div>
    <div class="flex flex-col">
      <span class="font-semibold text-zinc-800 dark:text-zinc-200">
        {testimonial.name}
      </span>
      <span class="text-sm text-zinc-500 dark:text-zinc-400">
        {testimonial.jobTitle}
      </span>
    </div>
  </div>
  <p
    class="text-zinc-600 dark:text-zinc-400 group-hover:text-zinc-800 dark:group-hover:text-zinc-200 transition-colors duration-200 mb-4"
  >
    {testimonial.copy}
  </p>
</div>
