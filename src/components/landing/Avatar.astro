---
import { Image } from "astro:assets";
import AvatarImage from "@images/Kieran-Avatar-funky-min.webp";

type Props = {
  width: number;
  height: number;
};

const { width, height, ...restOfProps } = Astro.props;
---

<Image
  src={AvatarImage}
  alt="Stylized headshot of Kieran"
  width={width}
  height={height}
  class="z-10 rounded-full border border-l-tertiary-2"
  loading="lazy"
  {...restOfProps}
/>
