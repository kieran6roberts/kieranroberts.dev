---
import { convertMarkdown } from "@utils/markdown";

type Props = {
  markdown: string;
};

const { markdown } = Astro.props;

const convertedHtml = await convertMarkdown(markdown);
---

<div
  class="prose mx-auto max-w-full break-words sm:prose-lg md:prose-xl prose-pre:rounded-lg prose-pre:p-0 prose-img:mx-auto prose-img:rounded-lg dark:prose-invert"
  set:html={convertedHtml}
/>
