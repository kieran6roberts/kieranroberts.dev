---
import SocialLink from '@shared/components/SocialLink.astro';
import { LINKEDIN_PROFILE_URL, GITHUB_PROFILE_URL } from '@config/consts/urls';

const BLOG_PATH = '/blog';
const isBlogActive = Astro.url.pathname === BLOG_PATH;
---

<div class="flex items-center justify-end gap-x-2 text-sm md:gap-x-6">
	<SocialLink href={LINKEDIN_PROFILE_URL} label="LinkedIn" iconName="linked-in" />
	<span class="hidden text-zinc-600 md:block dark:text-zinc-300">|</span>
	<SocialLink href={GITHUB_PROFILE_URL} label="GitHub" iconName="github" />
	<span class="hidden text-zinc-600 md:block dark:text-zinc-300">|</span>
	<SocialLink
		href={BLOG_PATH}
		target="_self"
		label="Blog"
		iconName="book"
		isActive={isBlogActive}
	/>
</div>
