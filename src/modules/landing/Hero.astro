---
import cn from "clsx";

import { HeroCTA } from "@modules/landing/HeroCTA";
import { HeroTitle } from "@modules/landing/HeroTitle";
import { HeroCopy } from "@modules/landing/HeroCopy";
---

<section
  class={cn(
    "flex flex-col items-center justify-center relative h-full bg-l dark:bg-d min-h-[calc(60vh)] w-full max-w-[1600px] mx-auto"
  )}
>
  <div
    class="absolute inset-0 bg-gradient-to-t from-l/100 via-l/85 to-l/100 dark:from-d/100 dark:via-d/85 dark:to-d/100"
  >
  </div>
  <div
    class={cn(
      "relative flex flex-col lg:flex-row-reverse gap-8 items-center justify-center h-full"
    )}
  >
    <div class="lg:hidden relative">
      <div
        class="relative flex items-center bg-l dark:bg-d justify-center shadow-lg h-36 w-36 lg:h-64 lg:w-64 rounded-full"
      >
        <img
          src="/Kieran-Avatar.webp"
          alt="Kieran Roberts header picture"
          width={256}
          height={256}
          loading="eager"
          class="opacity-75 hover:opacity-100 hover:scale-105 transition-all duration-300"
        />
      </div>
    </div>
    <div class="flex flex-col items-center lg:items-start gap-4">
      <div class="flex flex-col gap-8 mb-8">
        <HeroTitle client:load />
        <HeroCopy client:load />
        <HeroCTA client:load />
      </div>
    </div>
  </div>
</section>
